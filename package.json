{
  "name": "ecommerce-backend",
  "version": "1.0.0",
  "description": "Sistema de autenticación y autorización con Express, MongoDB y JWT",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "seed": "node seeds/users.seed.js",
    "test": "NODE_ENV=test mocha test/**/*.test.js --timeout 10000 --exit",
    "test:watch": "NODE_ENV=test mocha test/**/*.test.js --timeout 10000 --watch",
    "test:coverage": "NODE_ENV=test nyc mocha test/**/*.test.js --timeout 10000 --exit",
    "docker:build": "docker build -t ecommerce-backend:latest .",
    "docker:run": "docker run -p 8080:8080 --env-file .env ecommerce-backend:latest",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f"
  },
  "keywords": [
    "express",
    "mongodb",
    "jwt",
    "passport",
    "authentication"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "mongoose-paginate-v2": "^1.9.1",
    "nodemailer": "^6.9.7",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "chai": "^6.2.0",
    "mocha": "^11.7.5",
    "nodemon": "^3.0.2",
    "nyc": "^17.1.0",
    "supertest": "^7.1.4"
  }
}
